# Server Configuration
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=inkawallet_user
DB_PASSWORD=your_secure_password_here
DB_NAME=inkawallet_db

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production_minimum_32_characters
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_in_production_minimum_32_characters
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here_change_in_production
ENCRYPTION_IV=your_16_char_iv_here

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_TIMEOUT_MINUTES=15

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# External Services
SPEECHMATICS_API_KEY=your_speechmatics_api_key_here

# Admin Configuration
ADMIN_EMAIL=admin@inkawallet.com
ADMIN_PASSWORD=change_this_secure_password

# Transaction Limits
MIN_TRANSACTION_AMOUNT=100
MAX_TRANSACTION_AMOUNT=500000
DAILY_TRANSACTION_LIMIT=1000000

# External Wallet Providers (Mock Endpoints)
MPAMBA_API_URL=https://api.mpamba.mw/mock
AIRTEL_MONEY_API_URL=https://api.airtel.mw/mock
BANK_API_URL=https://api.bank.mw/mock
